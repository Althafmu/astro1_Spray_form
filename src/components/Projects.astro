---
import { Image } from "astro:assets";
import project1 from "../assets/project-1.png";
import project2 from "../assets/project-2.png";

// Using this for "Featured Projects" now
const projects = [
  {
    title: "Christian Center (Coloma)",
    category: "Commercial Insulation",
    description: "Auditorium & attic spray foam + silos application.",
    image: project1
  },
  {
    title: "Saint Joseph Catholic Church",
    category: "Soundproofing & Remodel",
    description: "Soundproofing and insulating confessionals during sanctuary remodel.",
    image: project2 
  },
  {
    title: "Revive Church (Coloma)",
    category: "HVAC Efficiency",
    description: "HVAC system spray foam to reduce heating/cooling loss in fellowship hall.",
    image: "https://images.unsplash.com/photo-1504307651254-35680f356dfd?q=80&w=2070&auto=format&fit=crop" 
  }
];
---

<section class="py-20 lg:py-28 bg-white overflow-hidden" id="projects">
    <div class="max-w-7xl mx-auto px-6">
        <div class="flex justify-between items-end mb-12">
            <div data-aos="fade-right">
                <span class="text-brand-blue font-bold tracking-wider uppercase text-sm">Our Portfolio</span>
                <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mt-2">Recent Projects</h2>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {projects.map((post, i) => (
                <article 
                    class="group"
                    data-aos="fade-up"
                    data-aos-delay={i * 100}
                >
                    <div class="overflow-hidden rounded-xl mb-4 aspect-[4/3] bg-gray-100">
                        <!-- Placeholder images used above; in real scenario, use actual project photos -->
                        <!-- Placeholder images used above; in real scenario, use actual project photos -->
                        {typeof post.image === "string" ? (
                            <Image 
                                src={post.image} 
                                alt={post.title} 
                                width={800}
                                height={600}
                                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                            />
                        ) : (
                            <Image 
                                src={post.image} 
                                alt={post.title} 
                                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                            />
                        )}
                    </div>
                    <div class="flex items-center gap-3 text-sm text-gray-500 mb-2">
                        <span class="text-brand-blue font-bold">{post.category}</span>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2 leading-tight">
                        {post.title}
                    </h3>
                    <p class="text-gray-600">
                        {post.description}
                    </p>
                </article>
            ))}
        </div>
    </div>
</section>
