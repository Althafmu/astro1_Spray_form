---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Contact Us | Lake Michigan Spray Foam">
  <Header />

  <main id="main-content">
    <!-- Hero -->
    <section class="bg-brand-dark text-white pt-32 pb-16 md:pt-40 md:pb-24">
      <div class="max-w-7xl mx-auto px-6 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6" data-aos="fade-up">
          Get A Free Quote
        </h1>
        <p
          class="text-xl text-gray-300 max-w-2xl mx-auto"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          We pride ourselves on responsiveness. Reach out today for a site visit
          or estimate.
        </p>
      </div>
    </section>

    <section class="py-16 md:py-24">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-16">
          <!-- Contact Info -->
          <div data-aos="fade-right">
            <h2 class="text-3xl font-bold text-brand-dark mb-8">
              Contact Information
            </h2>

            <div class="space-y-8">
              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 bg-brand-blue/10 rounded-lg flex items-center justify-center shrink-0"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-6 h-6 text-brand-blue"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-bold text-brand-dark mb-1">Phone</h3>
                  <p class="text-gray-600 mb-2">Give us a call. We answer.</p>
                  <a
                    href="tel:269-876-0598"
                    class="text-2xl font-bold text-brand-blue hover:underline"
                    >269-876-0598</a
                  >
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 bg-brand-blue/10 rounded-lg flex items-center justify-center shrink-0"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-6 h-6 text-brand-blue"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-bold text-brand-dark mb-1">Email</h3>
                  <a
                    href="mailto:Info@lakemichigansprayfoam.com"
                    class="text-lg text-brand-blue hover:underline"
                    >Info@lakemichigansprayfoam.com</a
                  >
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 bg-brand-blue/10 rounded-lg flex items-center justify-center shrink-0"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-6 h-6 text-brand-blue"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-bold text-brand-dark mb-1">
                    Location
                  </h3>
                  <p class="text-gray-600">
                    60405 County Rd 687<br />Hartford, MI 49057
                  </p>
                </div>
              </div>
            </div>

            <div
              class="mt-12 p-6 bg-gray-50 rounded-2xl border border-gray-100"
            >
              <h3 class="text-xl font-bold text-brand-dark mb-4">
                Service Area
              </h3>
              <p class="text-gray-600 mb-4">
                We proudly serve Southwest Michigan, typically within a 2-hour
                drive radius.
              </p>
              <div class="flex flex-wrap gap-2">
                {
                  [
                    "Kalamazoo",
                    "Benton Harbor",
                    "South Haven",
                    "St. Joseph",
                    "Paw Paw",
                    "Dowagiac",
                    "Holland",
                    "Mishawaka",
                  ].map((city) => (
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-sm text-gray-700">
                      {city}
                    </span>
                  ))
                }
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div
            class="bg-white p-8 md:p-10 rounded-3xl shadow-lg border border-gray-100"
            data-aos="fade-left"
          >
            <h3 class="text-2xl font-bold text-brand-dark mb-6">
              Send us a message
            </h3>
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label
                    for="first-name"
                    class="block text-sm font-medium text-gray-700 mb-2 cursor-pointer"
                    >First Name</label
                  >
                  <input
                    type="text"
                    id="first-name"
                    name="first-name"
                    required
                    autocomplete="given-name"
                    spellcheck="false"
                    class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-brand-blue focus:ring-4 focus:ring-brand-blue/20 outline-none transition-all duration-200"
                    placeholder="John"
                  />
                </div>
                <div>
                  <label
                    for="last-name"
                    class="block text-sm font-medium text-gray-700 mb-2 cursor-pointer"
                    >Last Name</label
                  >
                  <input
                    type="text"
                    id="last-name"
                    name="last-name"
                    required
                    autocomplete="family-name"
                    spellcheck="false"
                    class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-brand-blue focus:ring-4 focus:ring-brand-blue/20 outline-none transition-all duration-200"
                    placeholder="Doe"
                  />
                </div>
              </div>

              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-gray-700 mb-2 cursor-pointer"
                  >Email Address</label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  autocomplete="email"
                  class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-brand-blue focus:ring-4 focus:ring-brand-blue/20 outline-none transition-all duration-200"
                  placeholder="john@example.com"
                />
              </div>

              <div>
                <label
                  for="phone"
                  class="block text-sm font-medium text-gray-700 mb-2 cursor-pointer"
                  >Phone Number</label
                >
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  autocomplete="tel"
                  class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-brand-blue focus:ring-4 focus:ring-brand-blue/20 outline-none transition-all duration-200"
                  placeholder="(555) 555-5555"
                />
              </div>

              <div>
                <label
                  for="project-type"
                  class="block text-sm font-medium text-gray-700 mb-2 cursor-pointer"
                  >Project Type</label
                >
                <select
                  id="project-type"
                  name="project-type"
                  class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-brand-blue focus:ring-4 focus:ring-brand-blue/20 outline-none transition-all duration-200"
                >
                  <option>Pole Barn / Agricultural</option>
                  <option>Commercial Warehouse</option>
                  <option>Industrial / Factory</option>
                  <option>Roof Coating</option>
                  <option>Other</option>
                </select>
              </div>

              <div>
                <label
                  for="message"
                  class="block text-sm font-medium text-gray-700 mb-2 cursor-pointer"
                  >Message</label
                >
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  required
                  spellcheck="true"
                  class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-brand-blue focus:ring-4 focus:ring-brand-blue/20 outline-none transition-all duration-200 resize-y"
                  placeholder="Tell us about your project..."></textarea>
              </div>

              <button
                type="submit"
                class="w-full py-4 bg-brand-blue text-white font-bold rounded-xl hover:bg-brand-blue-dark transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 active:translate-y-0 active:scale-[0.98]"
              >
                Send Message
              </button>

              <p class="text-xs text-center text-gray-500 mt-4">
                We respect your privacy. No spam, ever.
              </p>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
