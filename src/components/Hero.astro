---
import { Image } from "astro:assets";
import heroImage from "../assets/hero-main.png";
---

<section
  class="relative min-h-dvh flex items-center overflow-hidden bg-gray-50 pt-20"
>
  <!-- Background Content (Image Placeholder) -->
  <div class="absolute inset-0 z-0">
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/50 z-10"></div>
    <!-- Placeholder for commercial spray foam or pole barn application -->
    <Image
      src={heroImage}
      alt="Spray foam insulation application on a commercial structure"
      class="w-full h-full object-cover"
    />
  </div>

  <div class="relative z-20 max-w-7xl mx-auto px-6 w-full">
    <div class="max-w-4xl">
      <h1
        class="text-4xl md:text-6xl lg:text-7xl font-bold text-white leading-tight mb-6"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        Commercial Spray Foam & Insulation for <span
          class="text-brand-blue bg-white/10 px-2 rounded"
          >Southwest Michigan.</span
        >
      </h1>

      <p
        class="text-lg md:text-xl text-gray-200 mb-8 max-w-2xl leading-relaxed"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        We Work Faithfully. We Leave It Better Than We Found It. Professional,
        fast, and reliable insulation services for commercial and agricultural
        buildings.
      </p>

      <div
        class="flex flex-col sm:flex-row gap-4"
        data-aos="fade-up"
        data-aos-delay="300"
      >
        <a
          href="/contact"
          class="px-8 py-3.5 bg-brand-blue text-white font-bold rounded-full hover:bg-brand-blue-dark transition-all duration-200 active:scale-[0.96] shadow-lg text-center"
        >
          Schedule a Site Visit
        </a>
        <a
          href="tel:269-876-0598"
          class="px-8 py-3.5 bg-white text-gray-900 font-bold rounded-full hover:bg-gray-100 transition-all duration-200 active:scale-[0.96] text-center flex items-center justify-center gap-2"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path></svg
          >
          Call 269-876-0598
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div
    class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 flex flex-col items-center animate-bounce"
  >
    <span class="text-white/70 text-xs mb-2 uppercase tracking-widest"
      >Scroll</span
    >
    <div class="w-px h-12 bg-white/50"></div>
  </div>
</section>
