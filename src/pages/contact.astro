---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import contactImage from "../assets/hero-main.png"; // Fallback image for background
---

<Layout title="Contact Us | Lake Michigan Spray Foam">
  <Header />

  <main id="main-content">
    <!-- Hero Header -->
    <section
      class="relative min-h-[45vh] flex items-center justify-center overflow-hidden bg-brand-dark pt-20"
    >
      <div class="absolute inset-0 z-0">
        <Image
          src={contactImage}
          alt="Contact Us"
          class="w-full h-full object-cover opacity-20"
        />
        <div
          class="absolute inset-0 bg-gradient-to-b from-brand-dark/90 via-brand-dark/80 to-brand-dark z-10"
        >
        </div>
      </div>

      <div class="relative z-20 max-w-4xl mx-auto px-6 text-center">
        <h1
          class="text-4xl md:text-6xl font-bold text-white mb-6"
          data-aos="zoom-in"
        >
          Start Your Project
        </h1>
        <p
          class="text-xl text-gray-300 max-w-2xl mx-auto leading-relaxed font-light"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          Ready to improve your building's efficiency? We're ready to help.
          Reach out for a free estimate or site visit.
        </p>
      </div>
    </section>

    <section class="py-20 bg-brand-dark relative z-10 -mt-10 md:-mt-20">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid lg:grid-cols-5 gap-8 lg:gap-12">
          <!-- Contact Info (Left Side - 2 Cols) -->
          <div class="lg:col-span-2 space-y-8" data-aos="fade-right">
            <!-- Card: Ways to Connect -->
            <div
              class="bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-md border border-white/10 p-8 rounded-3xl shadow-xl"
            >
              <h2 class="text-2xl font-bold text-white mb-8">
                Ways To Connect
              </h2>

              <div class="space-y-8">
                <!-- Phone -->
                <div class="flex items-start gap-4 group">
                  <div
                    class="w-12 h-12 rounded-xl bg-brand-blue/20 flex items-center justify-center shrink-0 group-hover:bg-brand-blue group-hover:text-white transition-colors text-brand-blue"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-6 h-6"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                      ></path></svg
                    >
                  </div>
                  <div>
                    <p
                      class="text-gray-400 text-sm mb-1 uppercase tracking-wider font-bold"
                    >
                      Call Us
                    </p>
                    <a
                      href="tel:269-876-0598"
                      class="text-2xl font-bold text-white hover:text-brand-blue transition-colors"
                      >269-876-0598</a
                    >
                    <p class="text-sm text-gray-500 mt-1">Mon-Fri, 8am - 6pm</p>
                  </div>
                </div>

                <!-- Email -->
                <div class="flex items-start gap-4 group">
                  <div
                    class="w-12 h-12 rounded-xl bg-brand-blue/20 flex items-center justify-center shrink-0 group-hover:bg-brand-blue group-hover:text-white transition-colors text-brand-blue"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-6 h-6"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      ></path></svg
                    >
                  </div>
                  <div>
                    <p
                      class="text-gray-400 text-sm mb-1 uppercase tracking-wider font-bold"
                    >
                      Email
                    </p>
                    <a
                      href="mailto:Info@lakemichigansprayfoam.com"
                      class="text-lg font-bold text-white hover:text-brand-blue transition-colors break-all"
                      >Info@lakemichigansprayfoam.com</a
                    >
                  </div>
                </div>

                <!-- Location -->
                <div class="flex items-start gap-4 group">
                  <div
                    class="w-12 h-12 rounded-xl bg-brand-blue/20 flex items-center justify-center shrink-0 group-hover:bg-brand-blue group-hover:text-white transition-colors text-brand-blue"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-6 h-6"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      ></path><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
                    >
                  </div>
                  <div>
                    <p
                      class="text-gray-400 text-sm mb-1 uppercase tracking-wider font-bold"
                    >
                      HQ Location
                    </p>
                    <p class="text-lg text-gray-300">
                      60405 County Rd 687<br />Hartford, MI 49057
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Service Area Pill Cloud -->
            <div
              class="bg-gradient-to-br from-white/5 to-transparent backdrop-blur-md border border-white/5 p-8 rounded-3xl"
            >
              <h3 class="text-xl font-bold text-white mb-4">Service Area</h3>
              <p class="text-gray-400 mb-6 text-sm">
                Proudly serving Southwest Michigan and surrounding communities.
              </p>
              <div class="flex flex-wrap gap-2">
                {
                  [
                    "Kalamazoo",
                    "Benton Harbor",
                    "South Haven",
                    "St. Joseph",
                    "Paw Paw",
                    "Dowagiac",
                    "Holland",
                    "Mishawaka",
                  ].map((city) => (
                    <span class="px-3 py-1 bg-white/10 hover:bg-white/20 border border-white/10 rounded-full text-sm text-gray-300 transition-colors cursor-default">
                      {city}
                    </span>
                  ))
                }
              </div>
            </div>
          </div>

          <!-- Contact Form (Right Side - 3 Cols) -->
          <div class="lg:col-span-3" data-aos="fade-left">
            <div
              class="bg-white rounded-3xl p-8 md:p-12 shadow-2xl relative overflow-hidden"
            >
              <div
                class="absolute top-0 right-0 w-32 h-32 bg-brand-blue/10 rounded-full blur-3xl -mr-16 -mt-16"
              >
              </div>

              <h2 class="text-3xl font-bold text-brand-dark mb-2">
                Send us a message
              </h2>
              <p class="text-gray-500 mb-8">
                Fill out the form below and we'll get back to you within 24
                hours.
              </p>

              <form class="space-y-6 relative z-10">
                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label
                      for="first-name"
                      class="block text-sm font-bold text-gray-700 mb-2"
                      >First Name</label
                    >
                    <input
                      type="text"
                      id="first-name"
                      name="first-name"
                      required
                      placeholder="John"
                      class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-brand-blue focus:ring-4 focus:ring-brand-blue/10 outline-none transition-all font-medium"
                    />
                  </div>
                  <div>
                    <label
                      for="last-name"
                      class="block text-sm font-bold text-gray-700 mb-2"
                      >Last Name</label
                    >
                    <input
                      type="text"
                      id="last-name"
                      name="last-name"
                      required
                      placeholder="Doe"
                      class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-brand-blue focus:ring-4 focus:ring-brand-blue/10 outline-none transition-all font-medium"
                    />
                  </div>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label
                      for="email"
                      class="block text-sm font-bold text-gray-700 mb-2"
                      >Email Address</label
                    >
                    <input
                      type="email"
                      id="email"
                      name="email"
                      required
                      placeholder="john@example.com"
                      class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-brand-blue focus:ring-4 focus:ring-brand-blue/10 outline-none transition-all font-medium"
                    />
                  </div>
                  <div>
                    <label
                      for="phone"
                      class="block text-sm font-bold text-gray-700 mb-2"
                      >Phone Number</label
                    >
                    <input
                      type="tel"
                      id="phone"
                      name="phone"
                      required
                      placeholder="(269) 555-0123"
                      class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-brand-blue focus:ring-4 focus:ring-brand-blue/10 outline-none transition-all font-medium"
                    />
                  </div>
                </div>

                <div>
                  <label
                    for="project-type"
                    class="block text-sm font-bold text-gray-700 mb-2"
                    >Project Type</label
                  >
                  <div class="relative">
                    <select
                      id="project-type"
                      name="project-type"
                      class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-brand-blue focus:ring-4 focus:ring-brand-blue/10 outline-none transition-all appearance-none font-medium cursor-pointer"
                    >
                      <option>Pole Barn / Agricultural</option>
                      <option>Commercial Warehouse</option>
                      <option>Industrial / Factory</option>
                      <option>Roof Coating</option>
                      <option>Other</option>
                    </select>
                    <div
                      class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5 text-gray-400"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        ><path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M19 9l-7 7-7-7"></path></svg
                      >
                    </div>
                  </div>
                </div>

                <div>
                  <label
                    for="message"
                    class="block text-sm font-bold text-gray-700 mb-2"
                    >Message</label
                  >
                  <textarea
                    id="message"
                    name="message"
                    rows="4"
                    required
                    placeholder="Tell us about your project..."
                    class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-brand-blue focus:ring-4 focus:ring-brand-blue/10 outline-none transition-all font-medium resize-none"
                  ></textarea>
                </div>

                <button
                  type="submit"
                  class="w-full py-4 bg-brand-blue text-white font-bold rounded-xl hover:bg-brand-blue-dark transition-all shadow-lg hover:shadow-xl hover:-translate-y-1 active:translate-y-0 text-lg"
                >
                  Send Message
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Map or additional info placeholder if needed -->
    <!-- <section class="h-96 w-full bg-gray-200 grayscale"></section> -->
  </main>

  <Footer />
</Layout>
